{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "conan: install",
            "type": "shell",
            "command": "conan install . --build=missing -s build_type=${input:buildType} -pr msvc",
            "group": "build"
        },
        {
            "label": "cmake: configure",
            "type": "shell",
            "command": "cmake --preset conan-default",
            "group": "build"
        },
        {
            "label": "cmake: build",
            "type": "shell",
            "command": "cmake --build ./build --config ${input:buildType}",
            "group": "build"
        },
        {
            "label": "build all",
            "dependsOrder": "sequence",
            "dependsOn": [
                "conan: install",
                "cmake: configure",
                "cmake: build"
            ],
            "group": "build"
        }
    ],
    "inputs": [
        {
            "id": "buildType",
            "type": "pickString",
            "description": "Select build type",
            "options": [
                "Debug",
                "Release",
                "RelWithDebInfo",
            ],
        }
    ]
}